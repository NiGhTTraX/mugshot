{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "pub": "npm run build && lerna publish && npm run clean",
    "lint": "eslint --ext ts,tsx,js .",
    "test": "./tests/run.sh",
    "test:node": "jest --config tests/node/jest.config.js --coverage",
    "test:gui": "./tests/gui/run.sh",
    "test:gui:selenium": "packages/selenium/scripts/debug.sh",
    "test:gui:selenium:stop": "packages/selenium/scripts/stop.sh",
    "_test:gui": "jest --config=tests/gui/jest.config.js --coverage",
    "report-coverage": "nyc report --reporter=json && codecov -f tests/results/coverage/coverage-final.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx?": "eslint",
    "*.js": "eslint"
  },
  "devDependencies": {
    "@nighttrax/eslint-config-ts": "~2.0.0",
    "@types/chai": "~4.1.7",
    "@types/fs-extra": "~8.0.0",
    "@types/node": "~10.12.2",
    "@typescript-eslint/eslint-plugin": "~1.11.0",
    "chai": "~4.2.0",
    "codecov": "~3.5.0",
    "eslint": "~5.16.0",
    "fs-extra": "~8.1.0",
    "husky": "~3.0.0",
    "jest": "~24.8.0",
    "lerna": "~3.15.0",
    "lint-staged": "~9.2.0",
    "nyc": "~14.1.0",
    "strong-mock": "~1.0.0",
    "ts-jest": "~24.0.2",
    "typescript": "~3.5.0",
    "webdriverio": "~5.11.0"
  }
}
