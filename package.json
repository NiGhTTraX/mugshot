{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build",
    "pub": "yarn run build && lerna publish && yarn run clean",
    "lint": "eslint --ext ts,tsx,js .",
    "test": "./tests/run.sh",
    "test:node": "tdd-buffet test --config tests/node/jest.config.js --coverage",
    "test:gui": "./tests/gui/run.sh",
    "test:gui:selenium": "selenium debug",
    "test:gui:selenium:stop": "selenium stop",
    "_test:gui": "tdd-buffet test --config tests/gui/jest.config.js --coverage",
    "report-coverage": "nyc report --reporter=json && codecov -f tests/results/coverage-final.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx?": "eslint",
    "*.js": "eslint"
  },
  "devDependencies": {
    "@nighttrax/eslint-config-ts": "~3.0.0",
    "@tdd-buffet/selenium": "~0.4.1",
    "@types/fs-extra": "~8.0.0",
    "@types/node": "~10.12.2",
    "@typescript-eslint/eslint-plugin": "~2.5.0",
    "codecov": "~3.6.0",
    "eslint": "~6.6.0",
    "fs-extra": "~8.1.0",
    "husky": "~3.0.0",
    "jimp": "~0.8.2",
    "lerna": "~3.18.0",
    "lint-staged": "~9.4.0",
    "nyc": "~14.1.0",
    "strong-mock": "~3.0.0",
    "tdd-buffet": "~0.14.0",
    "typescript": "~3.6.0",
    "webdriverio": "~5.15.0"
  }
}
