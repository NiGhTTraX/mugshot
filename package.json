{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build",
    "docs": "./docs.sh",
    "version": "lerna version --no-push",
    "version:force": "yarn run version --force-publish",
    "pub:git": "yarn run build && lerna publish from-git && yarn run clean",
    "pub:pkg": "yarn run build && lerna publish from-package && yarn run clean",
    "pub:recover": "lerna publish from-package",
    "lint": "eslint --ext ts,tsx,js .",
    "test": "lerna run test",
    "posttest": "./tests/coverage.sh",
    "pretest": "yarn run selenium",
    "selenium": "selenium start",
    "selenium:debug": "selenium debug",
    "selenium:stop": "selenium stop",
    "report-coverage": "nyc report --reporter=json && codecov -f tests/results/coverage-final.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx?": "eslint",
    "*.js": "eslint"
  },
  "devDependencies": {
    "@nighttrax/eslint-config-ts": "~6.3.0",
    "@tdd-buffet/jest-config": "~2.0.0",
    "@tdd-buffet/tsconfig": "~1.0.0",
    "@tdd-buffet/selenium": "~0.4.1",
    "@types/fs-extra": "~9.0.0",
    "@types/node": "~10.12.2",
    "codecov": "~3.7.0",
    "doctoc": "^1.4.0",
    "eslint": "~7.8.0",
    "fs-extra": "~9.0.0",
    "husky": "~4.3.0",
    "jimp": "~0.16.0",
    "lerna": "~3.22.0",
    "lint-staged": "~10.3.0",
    "nyc": "~15.1.0",
    "strong-mock": "~6.0.0",
    "tdd-buffet": "~2.1.0",
    "typedoc": "~0.19.0",
    "typedoc-plugin-pages": "~1.0.1",
    "typescript": "~4.0.0"
  }
}
