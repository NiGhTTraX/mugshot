{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build",
    "docs": "doctoc --title '**Table of content**' README.md && typedoc",
    "pub": "yarn run build && lerna publish && yarn run clean",
    "lint": "eslint --ext ts,tsx,js .",
    "test": "lerna run test",
    "posttest": "./tests/coverage.sh",
    "pretest": "yarn run selenium",
    "selenium": "selenium start",
    "selenium:debug": "selenium debug",
    "report-coverage": "nyc report --reporter=json && codecov -f tests/results/coverage-final.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx?": "eslint",
    "*.js": "eslint"
  },
  "devDependencies": {
    "@nighttrax/eslint-config-ts": "~3.0.0",
    "@tdd-buffet/selenium": "~0.4.1",
    "@types/fs-extra": "~8.0.0",
    "@types/node": "~10.12.2",
    "@typescript-eslint/eslint-plugin": "~2.11.0",
    "codecov": "~3.6.0",
    "doctoc": "^1.4.0",
    "eslint": "~6.7.0",
    "eslint-config-prettier": "~6.7.0",
    "eslint-plugin-prettier": "~3.1.1",
    "fs-extra": "~8.1.0",
    "husky": "~3.1.0",
    "jimp": "~0.9.0",
    "lerna": "~3.19.0",
    "lint-staged": "~9.5.0",
    "nyc": "~14.1.0",
    "prettier": "~1.19.1",
    "strong-mock": "~3.2.0",
    "tdd-buffet": "~0.15.0",
    "typedoc": "~0.15.3",
    "typescript": "~3.7.0",
    "webdriverio": "~5.16.0"
  }
}
