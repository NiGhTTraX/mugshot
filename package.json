{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build",
    "docs": "./docs.sh",
    "pub": "yarn run build && lerna publish && yarn run clean",
    "pub:recover": "lerna publish from-package",
    "lint": "eslint --ext ts,tsx,js .",
    "test": "lerna run test",
    "posttest": "./tests/coverage.sh",
    "pretest": "yarn run selenium",
    "selenium": "selenium start",
    "selenium:debug": "selenium debug",
    "selenium:stop": "selenium stop",
    "report-coverage": "nyc report --reporter=json && codecov -f tests/results/coverage-final.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx?": "eslint",
    "*.js": "eslint"
  },
  "devDependencies": {
    "@nighttrax/eslint-config-ts": "~6.1.0-beta.0",
    "@tdd-buffet/selenium": "~0.4.1",
    "@types/fs-extra": "~9.0.0",
    "@types/node": "~10.12.2",
    "codecov": "~3.6.0",
    "doctoc": "^1.4.0",
    "eslint": "~7.0.0",
    "fs-extra": "~9.0.0",
    "husky": "~4.2.0",
    "jimp": "~0.10.0",
    "lerna": "~3.21.0",
    "lint-staged": "~10.2.0",
    "nyc": "~15.0.0",
    "strong-mock": "~5.0.0",
    "tdd-buffet": "~0.16.0",
    "typedoc": "~0.17.0",
    "typescript": "~3.9.0",
    "webdriverio": "~5.22.0"
  }
}
