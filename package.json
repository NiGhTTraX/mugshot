{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build",
    "docs": "./docs.sh",
    "pub": "yarn run build && lerna publish && yarn run clean",
    "pub:recover": "lerna publish from-package",
    "lint": "eslint --ext ts,tsx,js .",
    "test": "lerna run test",
    "posttest": "./tests/coverage.sh",
    "pretest": "yarn run selenium",
    "selenium": "selenium start",
    "selenium:debug": "selenium debug",
    "selenium:stop": "selenium stop",
    "report-coverage": "nyc report --reporter=json && codecov -f tests/results/coverage-final.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx?": "eslint",
    "*.js": "eslint"
  },
  "devDependencies": {
    "@nighttrax/eslint-config-ts": "~4.1.0-alpha.0",
    "@tdd-buffet/selenium": "~0.4.1",
    "@types/fs-extra": "~8.0.0",
    "@types/node": "~10.12.2",
    "@typescript-eslint/eslint-plugin": "~2.15.0",
    "codecov": "~3.6.0",
    "doctoc": "^1.4.0",
    "eslint": "~6.8.0",
    "eslint-config-prettier": "~6.9.0",
    "eslint-import-resolver-typescript": "~2.0.0",
    "eslint-plugin-import": "~2.20.0",
    "eslint-plugin-prettier": "~3.1.1",
    "fs-extra": "~8.1.0",
    "husky": "~4.0.0",
    "jimp": "~0.9.0",
    "lerna": "~3.20.0",
    "lint-staged": "~9.5.0",
    "nyc": "~15.0.0",
    "prettier": "~1.19.1",
    "strong-mock": "~3.2.0",
    "tdd-buffet": "~0.15.0",
    "typedoc": "~0.16.0",
    "typescript": "~3.7.0",
    "webdriverio": "~5.18.0"
  }
}
