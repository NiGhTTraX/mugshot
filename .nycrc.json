{
  "include": [
    "src/**/*.{ts,tsx}"
  ],
  "exclude": [
    "**/*.d.ts",
    "tests/**/*"
  ],
  "extension": [".ts", ".tsx"],
  "all": true,

  "sourceMap": false,
  "instrument": false,
  "require": [
    "./tests/register.ts"
  ],

  "reporter": ["html", "text"],
  "report-dir": "tests/results/coverage",

  "lines": 100,
  "branches": 100,
  "check-coverage": false
}
