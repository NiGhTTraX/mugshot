{
  "all": true,
  "extension": [".ts", ".tsx"],
  "include": [
    "**/src/**/*"
  ],
  "exclude": [
    "**/*.d.ts",
    "**/tests/**/*",
    "**/vendor/**/*"
  ],

  "sourceMap": false,
  "instrument": false,
  "require": [
    "./tests/register.ts"
  ],

  "reporter": ["html", "text"],
  "report-dir": "tests/results/coverage",

  "lines": 100,
  "branches": 100,
  "check-coverage": false
}
