{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "es2017", "dom"],
    "types": ["node"],
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },

  "exclude": [
    "node_modules",
    "dist"
  ]
}
